<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_Back"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:background="@drawable/main_bottom_btn_selector"
            android:src="@mipmap/back"
            android:visibility="gone"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/TextView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:36"
            android:textSize="24dp"
            android:textColor="@color/black"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/ImageView_Blue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:background="@drawable/main_bottom_btn_selector"
            android:src="@mipmap/blue_2x"
         />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ImageView_Wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:background="@drawable/main_bottom_btn_selector"
            android:src="@mipmap/wifi4"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ImageView_Night"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:background="@drawable/main_bottom_btn_selector"
            android:src="@mipmap/sleep1"
            />
        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>